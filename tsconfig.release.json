{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "removeComments": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true,
    "inlineSources": true,
    "outDir": "dist/esm",
    "baseUrl": ".",
    "paths": {
      "angular2-modal": ["src/angular2-modal"]
    },
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "chai",
      "hammerjs",
      "source-map",
      "uglify-js",
      "webpack"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "include": [
    "src/angular2-modal/**/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/@types/core-js/index.d.ts",
    "dist",
    "gulp",
    "typings"
  ],
  "angularCompilerOptions": {
    "genDir": ".tmp",
    "debug": false,
    "skipMetadataEmit": false
  }
}